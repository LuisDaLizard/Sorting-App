<Window x:Class="Sorter.SortingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sorter"
        mc:Ignorable="d"
        Title="SortingWindow" Height="600" Width="800"
        ResizeMode="NoResize">

    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" Height="50">
            <Button Content="Shuffle" Click="Shuffle"  FontSize="24" FontFamily="Bahnschrift SemiCondensed" Height="30" Width="100" Margin="20, 0, 0, 0"/>
            <Button Content="Sort" Click="StartSort" FontSize="24" FontFamily="Bahnschrift SemiCondensed" Height="30" Width="100" Margin="20, 0, 0, 0"/>
            <TextBlock Text="Time: " Margin="30,0,0,0" FontSize="24" FontFamily="Bahnschrift SemiCondensed" Height="30"/>
            <TextBlock Name="time" Text="0ms" FontSize="24" FontFamily="Bahnschrift SemiCondensed" Height="30" Width="100" Margin="10,0,0,0"/>
        </StackPanel>
        <Canvas Name="canvas" Margin="0,0,0,0"/>
    </StackPanel>
    
</Window>
